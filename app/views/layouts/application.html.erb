<!DOCTYPE html>
<html>
<head>
  <title>KungFuTimsPlace</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <%= link_to "Digital Something or Other", root_path, :class => 'brand' %>

      <div class="nav-collapse">
        <ul class="nav">
          <li class="active"><%= link_to "Home", root_path %></li>
          <li><%= link_to "About Tim", "#" %></li>
        </ul>
      </div>

      <div class="pull-right">
        <ul class="nav">
          <%- if current_user %>
            <li>
              Signed in as <strong><%= current_user.name %></strong>
              <%= image_tag current_user.image_url %>
            </li>
            <li><%= link_to "Signout", signout_path %></li>
          <%- else %>
            <li><%= link_to "Sign In With Facebook", "/auth/facebook" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

